<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >


    <EditText
        android:id="@+id/editEmaila"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="600dp"
        android:background="@drawable/usernamebox"
        android:ems="10"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:hint="username"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textColor="#084DF1"
        android:textColorHint="#95989A" />
    <EditText
        android:id="@+id/editPassworda"
        android:layout_width="450dp"
        android:layout_height="100dp"
        android:ems="10"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"

        android:textAlignment="center"
        android:textColor="#084DF1"
        android:hint="password"
        android:textColorHint="#95989A"
        android:inputType="textPassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="700dp"
        android:background="@drawable/passwordbox"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/usimg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="610dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/pasimg"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="710dp"/>
    <Button
        android:id="@+id/loginbtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="850dp"
        android:background="@drawable/loginbg"
        />
    <Button
        android:id="@+id/signupbtn"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="330dp"
        android:layout_marginTop="850dp"
        android:background="@drawable/signupbg"
        />
</RelativeLayout>