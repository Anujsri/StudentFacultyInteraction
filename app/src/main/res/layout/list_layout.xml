<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#393E41">
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#1abb9c"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#393E41"
            android:id="@+id/itemLayout"
            android:clickable="true"

            >
    <ImageView
        android:id="@+id/fac_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:transitionName="img"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/fac_list_name"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#fff"
        android:background="@drawable/animtextview"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="20dp"
        android:transitionName="name"
         />
            <TextView
                android:id="@+id/fac_list_designation"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="17sp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#fff"
                android:background="@drawable/animtextview"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="140dp"
                android:layout_marginTop="60dp"
                android:transitionName="post"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>