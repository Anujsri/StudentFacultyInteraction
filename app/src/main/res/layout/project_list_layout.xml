<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#393E41"
            android:id="@+id/projectItemLayout">
            <TextView
                android:id="@+id/textprojectname"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#fff"
                android:background="@drawable/animtextview"

              />
            <TextView
                android:id="@+id/description_title"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:text="DESCRIPTION"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@+id/textprojectname"
                />
            <TextView
                android:id="@+id/textprojectDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textSize="20sp"
                android:inputType="textMultiLine"
                android:textAlignment="center"
                android:background="#fff"
                android:textColor="@color/colorPrimaryDark"

                android:layout_below="@+id/description_title"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>