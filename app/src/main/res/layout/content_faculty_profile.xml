<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.application.iiitdm.FacultyProfile"
    tools:showIn="@layout/app_bar_faculty_profile"
    android:background="#393E41"
    >
    <ImageView
        android:id="@+id/faculty_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/faculty_name"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:textSize="20sp"
        android:layout_marginTop="13dp"
        android:background="@drawable/animtextview"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_alignTop="@+id/faculty_image"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/faculty_depart"
        android:layout_width="250dp"
        android:layout_height="40dp"

        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/animtextview"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_below="@+id/faculty_name"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/faculty_cabin"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Cabin No."
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:background="@drawable/animtextview"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_below="@+id/faculty_depart"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/faculty_email"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Email"
        android:layout_marginTop="23dp"
        android:textSize="20sp"
        android:background="@drawable/animtextview"
        android:textAlignment="center"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:layout_below="@+id/faculty_cabin"
        android:layout_alignParentStart="true" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp">

        <Button
            android:text="Add Project"
            android:id="@+id/addProject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:textStyle="bold"
            />
        <Button
            android:text="View projects"
            android:id="@+id/viewProject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#fff"
            android:textStyle="bold"
            />
    </LinearLayout>


</RelativeLayout>
